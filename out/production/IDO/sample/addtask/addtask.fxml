<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #edeef0;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.addtask.AddTask">
   <children>
      <AnchorPane prefHeight="60.0" prefWidth="700.0" style="-fx-background-color: #23cba7;">
         <children>
            <Text fill="WHITE" layoutX="27.0" layoutY="42.0" strokeType="OUTSIDE" strokeWidth="0.0" text="ToDo list">
               <font>
                  <Font name="Comic Sans MS" size="31.0" />
               </font>
            </Text>
            <Text fx:id="toBackBtn" fill="WHITE" layoutX="626.0" layoutY="34.0" onMouseClicked="#backToTasks" strokeType="OUTSIDE" strokeWidth="0.0" text="Назад">
               <font>
                  <Font name="Comic Sans MS Bold" size="12.0" />
               </font>
            </Text>
         </children>
      </AnchorPane>
      <TextArea fx:id="taskAbout" layoutX="200.0" layoutY="200.0" prefHeight="104.0" prefWidth="300.0" promptText="Описание задачи. Посторайтесь уместиться в одно четкое предложение" style="-fx-border-color: #FFFFFF; -fx-border-width: 0; -fx-border-radius: 5;" wrapText="true">
         <font>
            <Font name="Comic Sans MS" size="12.0" />
         </font>
      </TextArea>
      <TextField fx:id="taskName" focusTraversable="false" layoutX="200.0" layoutY="159.0" prefHeight="29.0" prefWidth="300.0" promptText="Название" style="-fx-background-color: #FFFFFF; -fx-border-color: #FFFFFF;">
         <font>
            <Font name="Comic Sans MS" size="12.0" />
         </font>
      </TextField>
      <Button fx:id="addTaskBtn" layoutX="398.0" layoutY="314.0" mnemonicParsing="false" prefHeight="43.0" prefWidth="102.0" style="-fx-background-color: #23cba7;" text="Добавить" textFill="WHITE" />
      <Text fill="#797979" layoutX="227.0" layoutY="128.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Добавить задачу">
         <font>
            <Font name="Comic Sans MS Bold" size="30.0" />
         </font>
      </Text>
      <DatePicker fx:id="taskDate" layoutX="200.0" layoutY="314.0" prefHeight="43.0" prefWidth="185.0" promptText="Дата окончания" style="-fx-background-color: #FFFFFF;" />
      <Pane fx:id="errorPlace" layoutX="196.0" layoutY="364.0" prefHeight="29.0" prefWidth="300.0" />
   </children>
</AnchorPane>
